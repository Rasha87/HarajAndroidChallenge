<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.main.view.DetailsActivity">
    <include
        layout="@layout/app_bar_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/detailsThumbImage"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="fitXY"
              />
        <TextView
            android:id="@+id/txtViewDetailsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/title_color"
            android:textAlignment="viewEnd"

            />
        <TextView
            android:id="@+id/txtViewDetailsDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textAlignment="viewEnd"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:layout_margin="10dp"
             >
            <TextView
                android:id="@+id/txtViewDetailsUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                 android:padding="5dp"
                android:drawablePadding="5dp"
                android:layout_marginEnd="10dp"
                app:drawableEndCompat="@drawable/ic_user"
                android:layout_alignParentStart="true"

                />
            <TextView
                android:id="@+id/txtViewDetailsLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                 android:lines="1"
                android:padding="5dp"
                android:drawablePadding="5dp"
                android:layout_alignParentEnd="true"
                app:drawableEndCompat="@drawable/ic_location"
                android:textAlignment="center"
                />


        </RelativeLayout>
        <TextView
            android:id="@+id/txtViewDetailsBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textAlignment="viewStart"

            />
        <TextView
             android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
             android:textAlignment="viewEnd"
            android:text="@string/contact_us"
            />
        <TextView
             android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
             android:autoLink="phone"
            android:linksClickable="true"
            android:text="+966500100100"
            android:layout_marginBottom="20dp"
            />

    </LinearLayout>
    </ScrollView>
</LinearLayout>
